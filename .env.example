# n8n API Settings

# Required: URL of the n8n API
# Use different values based on your environment:
# - For local development: http://localhost:5678/api/v1
# - For Docker container: http://host.docker.internal:5678/api/v1
# Leave this unset to use the default from docker-compose.yml when in Docker
N8N_API_URL=http://localhost:5678/api/v1

# Required: API key for authenticating with n8n
# Generate this in the n8n UI under Settings > API > API Keys
N8N_API_KEY=your_n8n_api_key_here

# Required: Webhook credentials for authenticating with n8n
# N8N_WEBHOOK_USERNAME=your_n8n_webhook_username_here
# N8N_WEBHOOK_PASSWORD=your_n8n_webhook_password_here


# MCP Server Configuration

# Transport mode of the server
# 'stdio' (default), 'sse' (deprecated) or 'streamable'
SERVER_MODE=stdio

# MCP_API_KEY: Optional api key for the SSE transport mode
MCP_API_KEY=your_mcp_api_key_here

# SERVER_PORT: Port for the HTTP server when using sse mode (default: 8000)
SERVER_PORT=8000

# CONTAINER_PORT: External Docker container port when using sse mode (default: 3000)
CONTAINER_PORT=3000

# Optional: Set to 'true' to enable debug logging
DEBUG=false
